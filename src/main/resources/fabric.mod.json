{
  "schemaVersion": 1,
  "id": "disable-sculk-catalyst",
  "version": "${version}",

  "name": "Disable Sculk Catalyst",
  "description": "This mod adds the Gamerule disableSculkCatalyst, which disables the sculk spreading behavior of a sculk catalyst when you kill a mob near one.",
  "authors": [
    "ktraw2"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/disable-sculk-catalyst/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "io.github.ktraw2.disablesculkcatalyst.DisableSculkCatalyst"
    ]
  },
  "mixins": [
    "disable-sculk-catalyst.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.11",
    "fabric-api": "*",
    "minecraft": "~1.19.3",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
